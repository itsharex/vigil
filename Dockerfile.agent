# Build Stage
FROM golang:1.25 AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
# Build the agent binary
RUN CGO_ENABLED=0 GOOS=linux go build -o vigil-agent ./cmd/agent

# Final Stage (Scratch is smaller, but Alpine is safer for debug)
FROM alpine:latest
WORKDIR /app

# Install smartmontools (CRITICAL for the agent to work)
RUN apk add --no-cache smartmontools

# Copy the binary
COPY --from=builder /app/vigil-agent .

ENTRYPOINT ["./vigil-agent"]